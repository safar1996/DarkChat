<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_vertical|center_horizontal"
	android:background="#2A2A2A">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:padding="15dp"
		android:layout_marginBottom="20dp"
		android:background="#000000">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="-"
			android:layout_margin="15dp"
			android:textColor="#1B8535"
			android:textIsSelectable="false"
			android:textStyle="bold"
			android:id="@+id/app_lock_key1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="-"
			android:layout_margin="15dp"
			android:textColor="#1B8535"
			android:textIsSelectable="false"
			android:textStyle="bold"
			android:id="@+id/app_lock_key2"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="-"
			android:layout_margin="15dp"
			android:textColor="#1B8535"
			android:textIsSelectable="false"
			android:textStyle="bold"
			android:id="@+id/app_lock_key3"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="-"
			android:layout_margin="15dp"
			android:textColor="#1B8535"
			android:textIsSelectable="false"
			android:textStyle="bold"
			android:id="@+id/app_lock_key4"/>

	</LinearLayout>

	<GridLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:columnCount="3"
		android:rowCount="3"
		android:layout_marginTop="30dp">

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="1"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn1"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold"
			android:typeface="monospace"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="2"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn2"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold"
			android:typeface="monospace"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="3"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn3"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold"
			android:typeface="monospace"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="4"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn4"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:typeface="monospace"
			android:textStyle="bold"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="5"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn5"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="6"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn6"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:typeface="monospace"
			android:textStyle="bold"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="7"
			android:layout_margin="10dp"
			android:textColor="#FFFFFF"
			android:background="@drawable/grey_button_style"
			android:id="@+id/app_lock_btn7"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:typeface="monospace"
			android:textStyle="bold"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="8"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn8"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:typeface="monospace"
			android:textStyle="bold"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="9"
			android:layout_margin="10dp"
			android:background="@drawable/grey_button_style"
			android:textColor="#FFFFFF"
			android:id="@+id/app_lock_btn9"
			android:onClick="processButton"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:typeface="monospace"
			android:textStyle="bold"/>

	</GridLayout>

	<Button
		style="?android:attr/buttonStyleSmall"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="0"
		android:layout_margin="10dp"
		android:background="@drawable/grey_button_style"
		android:textColor="#FFFFFF"
		android:id="@+id/app_lock_btn0"
		android:onClick="processButton"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:typeface="monospace"
		android:textStyle="bold"/>

</LinearLayout>

